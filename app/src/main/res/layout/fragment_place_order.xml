<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.PlaceOrderFragment">

        <include
            android:id="@+id/topBarPlaceOrder"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarPlaceOrder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:paddingBottom="100dp">

                <LinearLayout
                    android:id="@+id/llPlaceOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/upper_round_white_box"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"/>

                        <TextView
                            android:id="@+id/tvOrderIdInPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#MOB653638"
                            android:textSize="14sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver To"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/tvDeliveryAddressInPlaceOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12 Abc Road, Bank Park New Town, Kolkata, West Bengal 700091"
                        android:textSize="14sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlDeliveryDateInPlaceOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llPlaceOrderDetails"
                    android:background="@color/blue3"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@color/green"/>

                    <TextView
                        android:id="@+id/tvDeliveryBateInPlaceOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery by 5th Sept 2023"
                        android:textColor="@color/green"
                        android:textSize="14sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"
                        android:drawableStart="@drawable/icon_truck"
                        android:drawablePadding="10dp"
                        android:layout_marginStart="13dp"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaceOrderList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rlDeliveryDateInPlaceOrder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rvPlaceOrderList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_box">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Summary"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items Price"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvItemPriceInPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹ 44240"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDiscountInPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- â‚¹ 10240"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDeliveryChargesInPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvTotalAmountInPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹ 34240"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/llButtonsInPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <TextView
                android:id="@+id/tvFinalAmountInPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 34240"
                android:textSize="26sp"
                android:textColor="@color/black1"
                android:fontFamily="@font/rubik_bold"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPayNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_black"
                android:layout_marginStart="10dp"
                android:text="PAY NOW"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
