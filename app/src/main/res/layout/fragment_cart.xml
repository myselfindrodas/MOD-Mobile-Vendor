<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.CartFragment">

        <include
            android:id="@+id/topBarCart"
            layout="@layout/top_bar_cart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/btnCartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarCart"
            app:layout_constraintBottom_toBottomOf="@+id/topBarCart"
            android:background="@drawable/white_edit_box"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver To"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_map_pin" />

                <TextView
                    android:id="@+id/tvSelectedLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/icon_arrow_down"
                    android:ellipsize="end"
                    android:hint="Select Delivery Location"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCartLocation"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_color"
                android:paddingBottom="100dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>





                <LinearLayout
                    android:id="@+id/llApplyCouponCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/rvCartList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp">


                    <EditText
                        android:id="@+id/etCouponcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Apply Coupon Code"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/rubik_regular"
                        android:background="@drawable/blue_dotted_box"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_margin="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnApplyCouponCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="APPLY"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:fontFamily="@font/rubik_medium"
                        android:background="@drawable/white_box_radious_10"
                        android:backgroundTint="@color/black"
                        android:layout_margin="5dp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/btnRemovecoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Coupon"
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:drawableTint="@color/red"
                    android:textColor="@color/red"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"/>


                <RelativeLayout
                    android:id="@+id/llRewardPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:background="@drawable/white_box_grey_border"
                    app:layout_constraintTop_toBottomOf="@+id/llApplyCouponCode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <CheckBox
                        android:id="@+id/checkRewardPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_check_box"
                        app:buttonTint="@color/yellow" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkRewardPoints"
                        android:layout_centerInParent="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Using Reward Points"
                            android:textColor="@color/black1"
                            android:textSize="14sp"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="15dp"/>

                        <TextView
                            android:id="@+id/tvAvailableRewardPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="230 Points Available"
                            android:textColor="@color/grey"
                            android:textSize="10sp"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            android:drawableStart="@drawable/ic_reward"
                            android:drawablePadding="5dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llpricedetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/llRewardPoints"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_box">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Summary"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items Price"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvItemPriceInCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDiscountInCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDeliveryChargesInCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvTotalAmountInCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/llButtonsInCart"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFinalAmountInCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 0"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_bold"/>

                    <TextView
                        android:id="@+id/tvSavingsInCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(save ₹ 0)"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/green"
                        android:fontFamily="@font/rubik_regular"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemsNoInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Items"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/rubik_regular"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_black"
                android:layout_marginStart="10dp"
                android:text="PLACE ORDER"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvEmptycart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty Cart. Please Add Product!!"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black1"
            android:fontFamily="@font/rubik_bold"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
