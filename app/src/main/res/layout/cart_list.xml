<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_box"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivMobileImageInCart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/mobile_image" />

        <TextView
            android:id="@+id/tvOffInCart"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:text="20% Off"
            android:visibility="gone"
            android:textSize="6sp"
            android:textColor="@color/white"
            android:fontFamily="@font/rubik_bold"
            android:background="@drawable/blue_round_box"
            android:layout_below="@+id/ivMobileImageInCart"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/ivMobileImageInCart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMobileNameInCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:maxEms="10"
                android:text="Apple I Phone 13 Pro"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBarInCart"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ratingNoInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="(0)"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/stockInCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/rubik_regular"
                android:text="15 In Stock"
                android:textColor="@color/green"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/mini_grey_box" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/deep_grey1" />

                <TextView
                    android:id="@+id/tvMobileQualityInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="GOOD"
                    android:textColor="@color/grey"
                    android:textSize="8sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/deep_grey1" />

                <TextView
                    android:id="@+id/tvMobileStorageInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="4GB / 256GB"
                    android:textColor="@color/grey"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMobileOffPriceInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:text="₹ 7900"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMobileRealPriceInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/rubik_bold"
                    android:foreground="@drawable/strike_through"
                    android:text="₹ 9900"
                    android:textColor="@color/grey1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSavePriceOnMobileInCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:text="Save ₹ 2000"
                    android:textColor="@color/green"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/white_box_grey_border">

            <Spinner
                android:id="@+id/qtySpinnerInCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="QTY"
                android:textSize="12sp"
                android:textColor="@color/grey3"
                android:fontFamily="@font/rubik_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1"
        android:layout_marginTop="15dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlRemoveFromCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivRemoveInCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bin"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_regular"
                android:layout_toRightOf="@+id/ivRemoveInCart"
                android:textColor="@color/grey"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/grey1"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rlAddToFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivFavourite"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_red_heart"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TO FAVOURITE"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_regular"
                android:layout_toRightOf="@+id/ivFavourite"
                android:textColor="@color/red"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>