<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_upper_round_box"
    android:paddingBottom="30dp">

    <View
        android:id="@+id/dashAddress"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="@color/grey1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvSelectAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Address"
        android:textSize="13sp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/black1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashAddress"
        android:drawableRight="@drawable/icon_arrow_down"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <View
        android:id="@+id/dash2SelectAddress"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addressListItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dash2SelectAddress"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddNewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW ADDRESS"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/rubik_medium"
        android:background="@drawable/white_box_radious_10"
        android:backgroundTint="@color/black"
        android:layout_margin="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressListItems"/>


</androidx.constraintlayout.widget.ConstraintLayout>