<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.FeaturesAndSpecificationFragment">

        <include
            android:id="@+id/topBarFeatures"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarFeatures"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:paddingBottom="30dp">

                <RelativeLayout
                    android:id="@+id/rlFeatureSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvFeatures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Features"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvSpecification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specification"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_marginStart="35dp"
                        android:layout_toRightOf="@+id/tvFeatures"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlFeatureSpecification"
                    android:background="@color/grey1"/>

                <RelativeLayout
                    android:id="@+id/rlDash"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view">

                    <View
                        android:id="@+id/featureIndicator"
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/blue"
                        android:layout_marginStart="20dp"
                        android:visibility="visible"/>

                    <View
                        android:id="@+id/specificationIndicator"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="@color/blue"
                        android:layout_marginStart="132dp"
                        android:layout_toRightOf="@+id/featureIndicator"
                        android:visibility="gone"/>

                </RelativeLayout>

                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:id="@+id/rvFeaturesList"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/rlDash"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:layout_marginStart="20dp"-->
                <!--                    android:layout_marginEnd="20dp"-->
                <!--                    android:visibility="visible"/>-->


                <TextView
                    android:id="@+id/tvFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rlDash"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_marginEnd="20dp"
                    android:visibility="visible"/>

                <TableLayout
                    android:id="@+id/tlSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rlDash"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="25dp"
                    android:visibility="gone">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontVideoRecording"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Video Recording"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontVideoRecordingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1920x1080 @ 30fpsssssssssssssss"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontFlash"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Flash"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/c"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Yes, Retina Flash"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontAperture"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Aperture"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontApertureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="f/2.2"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontCameraResolution"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Camera 1 Resolution"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontCameraResolutionValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="7MP"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontCameraSetup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Camera Setup"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontCameraSetupValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Single, 7MP"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontSensor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Sensor"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontSensorValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="BSI Sensor"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontCameraType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Camera 1 Type"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontCameraTypeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="f2.2, Primary Camera"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFrontCameraFeatures"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Front Camera Features"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFrontCameraFeaturesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Face Detection, HDR"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvWiFi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Wi-Fi"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvWiFiSetup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Yes"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFMRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="FM Radio"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvFMRadioSetup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="No"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvWiFiFeatures"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Wi-Fi Features"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                        <TextView
                            android:id="@+id/tvWiFiFeaturesType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Mobile Hotspot"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="20dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_margin="1dp"/>

                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
