<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.CancelOrderFragment">

        <include
            android:id="@+id/topBarCancelOrder"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarCancelOrder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llCancelOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/upper_round_white_box"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:id="@+id/llorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="21dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order ID"
                                android:textSize="14sp"
                                android:textColor="@color/grey"
                                android:fontFamily="@font/rubik_regular"/>

                            <TextView
                                android:id="@+id/tvOrderId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#MOB653638"
                                android:textSize="14sp"
                                android:textColor="@color/black1"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginStart="5dp"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1"
                            android:layout_marginTop="15dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp">

                            <ImageView
                                android:id="@+id/ivCancelMobileImage"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/phone_image" />

                            <TextView
                                android:id="@+id/tvCancelMobileName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Apple I Phone 13 Pro"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/ivCancelMobileImage"
                                android:layout_toStartOf="@+id/tvCancelMobileQty"/>

                            <LinearLayout
                                android:id="@+id/cancelOrderDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvCancelMobileName"
                                android:layout_toRightOf="@+id/ivCancelMobileImage"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="10dp">

                                    <View
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/mini_grey_box"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="13dp"
                                        android:background="@color/deep_grey1"
                                        android:layout_marginStart="5dp"/>

                                    <TextView
                                        android:id="@+id/tvCancelMobileQuality"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="GOOD"
                                        android:textSize="7sp"
                                        android:textColor="@color/grey"
                                        android:fontFamily="@font/rubik_regular"
                                        android:layout_marginStart="5dp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="13dp"
                                        android:background="@color/deep_grey1"
                                        android:layout_marginStart="5dp"/>

                                    <TextView
                                        android:id="@+id/tvCancelMobileStorage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4GB / 256GB"
                                        android:textSize="7sp"
                                        android:textColor="@color/grey"
                                        android:fontFamily="@font/rubik_regular"
                                        android:layout_marginStart="5dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="12dp">
                                    <TextView
                                        android:id="@+id/tvCancelMobileOffPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹ 7900"
                                        android:textSize="12sp"
                                        android:textColor="@color/black1"
                                        android:fontFamily="@font/rubik_bold"/>
                                    <TextView
                                        android:id="@+id/tvCancelMobileRealPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹ 9900"
                                        android:textColor="@color/grey1"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/rubik_bold"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:foreground="@drawable/strike_through"/>
                                    <TextView
                                        android:id="@+id/tvSavePriceOnCancelMobile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Save â‚¹ 2000"
                                        android:textSize="7sp"
                                        android:textColor="@color/green"
                                        android:fontFamily="@font/rubik_regular"/>
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCancelMobileQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QTY : 1"
                                android:textSize="12sp"
                                android:textColor="@color/grey3"
                                android:fontFamily="@font/rubik_regular"
                                android:background="@drawable/white_box_grey_border_radious_8"
                                android:layout_alignParentEnd="true"
                                android:layout_alignRight="@+id/cancelOrderDetails"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reason For Cancel"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="20dp"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_regular"/>


                        <EditText
                            android:id="@+id/etCancelreason"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/white_box_grey_border"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="25dp"
                            android:hint="Enter Cancelled Reason"
                            android:padding="15dp"
                            android:gravity="top"
                            android:textSize="13sp"
                            android:textColor="@color/deep_grey"
                            android:fontFamily="@font/rubik_regular"
                            android:inputType="text"
                            android:maxLength="250"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_radious_10"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/rubik_bold"
                        android:text="SUBMIT"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/llorder"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!--                    <androidx.recyclerview.widget.RecyclerView-->
                    <!--                        android:id="@+id/rvReasonsForCancel"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"/>-->

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
