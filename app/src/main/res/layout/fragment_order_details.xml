<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.OrderDetailsFragment">

        <include
            android:id="@+id/topBarOrderDetails"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarOrderDetails"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/llOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/upper_round_white_box"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"/>

                        <TextView
                            android:id="@+id/tvOrderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#MOB653638"
                            android:textSize="14sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver To"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/tvDeliveryAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12 Abc Road, Bank Park New Town, Kolkata, West Bengal 700091"
                        android:textSize="14sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlDeliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llOrderDetails"
                    android:background="@color/blue3"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@color/green"/>

                    <TextView
                        android:id="@+id/tvDeliveryBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery by 5th Sept 2023"
                        android:textColor="@color/green"
                        android:textSize="14sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_centerVertical="true"
                        android:drawableStart="@drawable/icon_truck"
                        android:drawablePadding="10dp"
                        android:layout_marginStart="13dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llCancelOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_box"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlDeliveryDate">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="13dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivMobileImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/phone_image" />

                        <TextView
                            android:id="@+id/tvOrderedMobileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apple I Phone 13 Pro"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:ellipsize="end"
                            android:maxEms="10"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/tvOrderedMobileQty"
                            android:layout_toEndOf="@+id/ivMobileImage"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:id="@+id/mobileDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/tvOrderedMobileName"
                            android:layout_toEndOf="@+id/ivMobileImage"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp">

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/mini_grey_box"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="13dp"
                                    android:background="@color/deep_grey1"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:id="@+id/tvOrderedMobileQuality"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GOOD"
                                    android:textSize="7sp"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/rubik_regular"
                                    android:layout_marginStart="5dp"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="13dp"
                                    android:background="@color/deep_grey1"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:id="@+id/tvOrderedMobileStorage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4GB / 256GB"
                                    android:textSize="7sp"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/rubik_regular"
                                    android:layout_marginStart="5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp">
                                <TextView
                                    android:id="@+id/tvOrderedMobileOffPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 7900"
                                    android:textSize="12sp"
                                    android:textColor="@color/black1"
                                    android:fontFamily="@font/rubik_bold"/>
                                <TextView
                                    android:id="@+id/tvOrderedMobileRealPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 9900"
                                    android:textColor="@color/grey1"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/rubik_bold"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:foreground="@drawable/strike_through"/>
                                <TextView
                                    android:id="@+id/tvSavePriceOnOrderedMobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Save ₹ 2000"
                                    android:textSize="7sp"
                                    android:textColor="@color/green"
                                    android:fontFamily="@font/rubik_regular"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvOrderedMobileQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QTY : 1"
                            android:textSize="12sp"
                            android:textColor="@color/grey3"
                            android:fontFamily="@font/rubik_regular"
                            android:background="@drawable/white_box_grey_border_radious_8"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"
                        android:visibility="visible"/>

                    <RelativeLayout
                        android:id="@+id/rlCancelOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/icCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_cancel"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CANCEL ORDER"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_toRightOf="@+id/icCancel"
                            android:textColor="@color/red"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llCancelOrder"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="22dp"
                    android:visibility="gone"
                    android:background="@drawable/white_box"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Status"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="13dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"/>

                    <TextView
                        android:id="@+id/tvSellAllUpdates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All Updates"
                        android:textColor="@color/yellow"
                        android:textSize="12sp"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnWriteReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_box_radious_10"
                    android:backgroundTint="@color/black"
                    android:text="WRITE REVIEW"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llCancelOrder"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="22dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/btnWriteReview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_box">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Summary"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items Price"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- ₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textSize="16sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvDeliveryCharges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="16sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_bold"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
