<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivOrderPlaced"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/blue_round"
            android:backgroundTint="@color/grey1"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/statusLine"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/grey1"
            android:layout_below="@+id/ivOrderPlaced"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/dateOfPlaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Placed, 1st Sept 2023"
            android:textSize="11sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/rubik_regular" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order has been accepted"
            android:textSize="9sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</LinearLayout>