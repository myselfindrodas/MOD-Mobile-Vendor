<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.WriteReviewFragment">

        <include
            android:id="@+id/topBarWriteReview"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarWriteReview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color">

                <LinearLayout
                    android:id="@+id/llWriteReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/upper_round_white_box"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:textSize="14sp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/rubik_regular"/>

                        <TextView
                            android:id="@+id/tvOrderIdInReviewPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#MOB653638"
                            android:textSize="14sp"
                            android:textColor="@color/black1"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivMobileImageInReviewPage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/mobile_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/ivMobileImageInReviewPage"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMobileNameInReviewPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apple I Phone 13 Pro"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginStart="10dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="10dp">

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/mini_grey_box"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="13dp"
                                    android:background="@color/deep_grey1"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:id="@+id/tvMobileQualityInReviewPage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GOOD"
                                    android:textSize="8sp"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/rubik_regular"
                                    android:layout_marginStart="5dp"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="13dp"
                                    android:background="@color/deep_grey1"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:id="@+id/tvMobileStorageInReviewPage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4GB / 256GB"
                                    android:textSize="8sp"
                                    android:textColor="@color/grey"
                                    android:fontFamily="@font/rubik_regular"
                                    android:layout_marginStart="5dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp">
                                <TextView
                                    android:id="@+id/tvMobileOffPriceInReviewPage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 7900"
                                    android:textSize="15sp"
                                    android:textColor="@color/black1"
                                    android:fontFamily="@font/rubik_bold"/>
                                <TextView
                                    android:id="@+id/tvMobileRealPriceInReviewPage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 9900"
                                    android:textColor="@color/grey1"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/rubik_bold"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:foreground="@drawable/strike_through"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvSavePriceOnMobileInReviewPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save ₹ 2000"
                                android:textSize="9sp"
                                android:textColor="@color/green"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginStart="12dp"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey1"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photo"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"/>

                    <RelativeLayout
                        android:id="@+id/rlUploadImage"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:visibility="gone"
                        android:background="@drawable/grey_box"
                        android:layout_margin="15dp">

                        <ImageView
                            android:id="@+id/image1"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/tvUploadPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Photo"
                            android:textColor="@color/black1"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_regular"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_feather_upload"
                            android:drawableTint="@color/black"/>

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Give Rating"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"/>


                    <RatingBar
                        android:id="@+id/givenrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starCount="5"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        app:isIndicator="false"
                        app:starFillColor="@color/yellow"
                        app:starSize="25"
                        android:progressTint="@color/yellow"
                        app:starValue="3.5" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write Review"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/rubik_regular"/>

                    <EditText
                        android:id="@+id/etReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_grey_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:maxLength="250"
                        android:fontFamily="@font/rubik_regular"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:inputType="textMultiLine"
                        android:gravity="start"
                        android:minLines="5"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmitReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_box_radious_10"
                    android:backgroundTint="@color/black"
                    android:text="SUBMIT"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="25dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
