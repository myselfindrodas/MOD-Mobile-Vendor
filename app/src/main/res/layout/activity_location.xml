<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LocationActivity">

        <include
            android:id="@+id/topBarLocation"
            layout="@layout/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topBarLocation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color">

                <TextView
                    android:id="@+id/tvCreateNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New Account"
                    android:textSize="27sp"
                    android:textColor="@color/black1"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvFillDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Fill Your Details"
                    android:textSize="18sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/rubik_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCreateNewAccount"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:id="@+id/rlMap"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvFillDetails"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.google.android.gms.maps.SupportMapFragment" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:background="@drawable/white_box_grey_border"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/rlMap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mylocation"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Use Current Location"
                        android:textSize="12sp"
                        android:textColor="@color/yellow"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    app:layout_constraintTop_toBottomOf="@+id/llCurrentLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tvTypeManually"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type Manually"
                    app:layout_constraintTop_toBottomOf="@+id/tvOr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/grey_box"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    app:layout_goneMarginTop="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNextInLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_box_radious_10"
                    android:backgroundTint="@color/black"
                    android:text="NEXT"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTypeManually"
                    android:layout_margin="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
